{
  "name": "arclightfabrication-www",
  "license": "UNLICENSED",
  "scripts": {
    "analyze": "BUNDLE_ANALYZE=browser next build",
    "build": "next build",
    "dev": "next",
    "export": "next export",
    "now-build": "yarn test --ci && yarn build && yarn export -o dist",
    "test": "jest"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "babel-plugin-styled-components",
        {
          "ssr": true,
          "displayName": true,
          "preprocess": false
        }
      ]
    ]
  },
  "jest": {
    "collectCoverage": true,
    "testMatch": [
      "<rootDir>/__tests__/**/*.test.js"
    ],
    "moduleDirectories": [
      "./",
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpe?g|png|gif|svg)$": "<rootDir>/__tests__/__mocks__/fileMock.js",
      "^assets/(.*)$": "<rootDir>/__tests__/__mocks__/fileMock.js"
    }
  },
  "dependencies": {
    "apollo-cache-inmemory": "^1.3.5",
    "apollo-client": "^2.3.2",
    "apollo-link-http": "^1.5.4",
    "babel-plugin-styled-components": "^1.8.0",
    "graphcms-image": "^1.1.0-beta4",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "isomorphic-unfetch": "^3.0.0",
    "next": "^7.0.2",
    "next-compose-plugins": "^2.1.1",
    "next-offline": "^3.2.1",
    "polished": "^2.3.0",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-apollo": "^2.2.4",
    "react-dom": "^16.4.0",
    "react-flip-move": "^3.0.3",
    "react-google-recaptcha": "^2.0.1",
    "react-modal": "^3.4.5",
    "react-slick": "^0.23.2",
    "react-tabs": "^2.2.2",
    "styled-components": "3.4.10",
    "theming": "^2.2.0"
  },
  "devDependencies": {
    "@zeit/next-bundle-analyzer": "^0.1.2",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.0.1",
    "file-loader": "^2.0.0",
    "jest": "^23.1.0",
    "react-test-renderer": "^16.4.0"
  }
}
