{
  "name": "arclightfabrication",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "test-www": "cd www/ && yarn test --bail --findRelatedTests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.js": [ "standard" ],
      "www/**/*.js": [ "standard", "yarn test-www" ]
    },
    "ignore": ["**/node_modules/**"]
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [ "React" ],
    "ignore": [ "**/node_modules/**" ]
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.9.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "standard": "^13.0.1"
  }
}
